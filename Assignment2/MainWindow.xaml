<Window x:Class="AssignmentPRN1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AssignmentPRN1"
        mc:Ignorable="d"
        Background="Aqua"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="339*"/>
            <ColumnDefinition Width="283*"/>
            <ColumnDefinition Width="178*"/>
        </Grid.ColumnDefinitions>
        <ContentControl Grid.Column="0" Name="ContentArea" Grid.ColumnSpan="2">
            
        </ContentControl>
        <StackPanel Grid.Column="2" Margin="10,10,10,0">
            <Button Name="btnLoad" Width="100" Content="List Customers" Click="btnLoadCustomer" Margin="25"/>
            <Button Name="btnLoadR" Width="100" Content="Room"  Click="btnLoadRoom" Margin="25"/>
            <Button Name="btnBooking" Width="100" Content="Booking"   Margin="25" Click="btnBooking_Click"/>
            <Button x:Name="btnLogout"  Content="Logout" Width="100" Height="30" Click="LogoutButton_Click" />

        </StackPanel>
    </Grid>
</Window>
